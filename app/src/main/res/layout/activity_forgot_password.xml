<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tv_forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#1565C0"
        />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your registered EMAIL-ID"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/et_forgot_emailid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:background="@drawable/custom_forgot_edittext"
        android:hint="Email ID"
        />

    <Button
        android:id="@+id/btn_forgot_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Send"
        android:backgroundTint="@color/blue"
        android:background="@drawable/custom_forgot_button"/>


</LinearLayout>